# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/thesora-gallery
# For production, use MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/thesora-gallery

# JWT Configuration
JWT_SECRET=your_very_long_random_secure_string
JWT_EXPIRE=7d

# Backblaze B2 Configuration
B2_APPLICATION_KEY_ID=your_key_id
B2_APPLICATION_KEY=your_application_key
B2_BUCKET_NAME=your_bucket_name
B2_ENDPOINT=s3.us-west-002.backblazeb2.com